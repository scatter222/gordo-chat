# MongoDB Configuration
# For local development: mongodb://admin:admin123@localhost:27017/gordo-chat?authSource=admin
# For Docker Compose: mongodb://admin:admin123@mongodb:27017/gordo-chat?authSource=admin
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/gordo-chat?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=gordo-chat

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-with-random-string

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production-with-random-string

# Socket.io Configuration
SOCKET_PORT=3002
NEXT_PUBLIC_SOCKET_URL=http://localhost:3002

# App Configuration
NODE_ENV=production